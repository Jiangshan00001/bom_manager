<%- model_class = Assembly -%>
<div class="page-header">
  <h1 class="pull-left">Todos os <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  <div class="btn-group pull-right">
    <%= link_to t('.new', :default => t("helpers.links.new")),
              new_assembly_path,
              :class => 'btn btn-primary' %>
  </div>
  <div class="clearfix"></div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:ncm) %></th>
      <th><%= model_class.human_attribute_name(:place) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @assemblies.each do |assembly| %>
      <tr>
        <td><%= assembly.id %></td>
        <td><%= assembly.title %></td>
        <td><%= assembly.description %></td>
        <td><%= assembly.ncm %></td>
        <td><%= assembly.place %></td>
        <td><%= assembly.amount %></td>
        <td>
          <%= link_to "Ver BOM", assembly_path(assembly), :class => "btn btn-mini btn-success" %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_assembly_path(assembly), :class => 'btn btn-primary btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      assembly_path(assembly),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
