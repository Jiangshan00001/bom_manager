<%- model_class = AssemblyItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:assembly_id) %>:</strong></dt>
  <dd><%= @assembly_item.assembly_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assemblable_id) %>:</strong></dt>
  <dd><%= @assembly_item.assemblable_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assemblable_type) %>:</strong></dt>
  <dd><%= @assembly_item.assemblable_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @assembly_item.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @assembly_item.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @assembly_item.comments %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bottom) %>:</strong></dt>
  <dd><%= @assembly_item.bottom %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              assembly_items_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assembly_item_path(@assembly_item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assembly_item_path(@assembly_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
