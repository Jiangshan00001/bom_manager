<%= form_for @vendor_part, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :vendor_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :vendor_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :part_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :part_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :part_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :part_number, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vendor_parts_path, :class => 'btn' %>
  </div>
<% end %>
